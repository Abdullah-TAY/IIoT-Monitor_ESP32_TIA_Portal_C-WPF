<Window x:Class="WpfPlcMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ESP32 Temperature Monitor" 
        Height="450" Width="450"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="149*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left" Margin="100,0,0,0">

            <Button x:Name="BtnConnect" Content="Connect to PLC" Width="150" Height="30" 
                Click="BtnConnect_Click" Margin="0,0,0,20"/>

            <TextBlock x:Name="TxtStatus" Text="Disconnected" HorizontalAlignment="Center" 
                   Foreground="Gray" Margin="0,0,0,30"/>

            <Label Content="Temperature" FontSize="18" HorizontalAlignment="Center" Foreground="#555"/>

            <Label x:Name="TxtTemp" Content="--.- °C" FontSize="60" FontWeight="Bold" 
               Foreground="#333" HorizontalAlignment="Center"/>

            <ProgressBar x:Name="PbTemp" Width="250" Height="20" Minimum="0" Maximum="50" Value="0" Margin="0,10,0,0"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" VerticalAlignment="Bottom" Margin="0,0,0,10" Grid.ColumnSpan="2" Grid.RowSpan="2">



            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                <Image Source="/Images/siemens.png" Height="100" Margin="10,0"/>

                <Image Source="/Images/esp32.jpg" Height="100" Margin="10,0"/>

                <Image Source="/Images/modbus.jpg" Height="100" Margin="10,0"/>

            </StackPanel>
        </StackPanel>
    </Grid>
</Window>